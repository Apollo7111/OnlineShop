@using OnlineShop.Core.Models
@model IEnumerable<CategoryListViewModel>
@{
}
<head>
    <link rel="stylesheet" href="~/css/ManageItemSheet.css" asp-append-version="true" />
</head>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categories
                     <a asp-area="admin" asp-action="create" asp-controller="category"  class="btn btn-block  btn-success btn-lg">Create</a>
                </h3>
            </div>

            @using (Html.BeginForm())  
            {  
                <p>  
                    Find Category by Name: @Html.TextBox("SearchString")  
                    <input type="submit" value="Search" />  
                </p>  
            }

            <div class="card table-responsive p-0">
                  <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {

                            <tr>
                                <td>@category.Id</td>
                                <td >@category.Name</td>
                                <td>
                                    <a asp-area="admin" asp-action="edit" asp-controller="category" asp-route-id="@category.Id" class="btn btn-block btn-outline-info btn-xs">Edit</a>
                                    <a asp-area="admin" asp-action="delete" asp-controller="category" asp-route-id="@category.Id" onclick="return confirm('Are you sure you want to delete category with name @category.Name?')" class="btn btn-block btn-outline-danger btn-xs">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>